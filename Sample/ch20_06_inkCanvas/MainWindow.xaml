<Window x:Class="ch20_06_inkCanvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch20_06_inkCanvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#7fcfcf">
    <Grid Margin="10" Background="#cfffff">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <InkCanvas x:Name="cvsMain" Grid.Column="0"/>
        <StackPanel Grid.Column="1">
            <Button x:Name="btnNew" Content="새파일" Margin="5" Click="btnNew_Click"/>
            <Button x:Name="btnSave" Content="저장" Margin="5" Click="btnSave_Click"/>
            <Button x:Name="btnLoad" Content="불러오기" Margin="5" Click="btnLoad_Click"/>
        </StackPanel>
    </Grid>
</Window>
