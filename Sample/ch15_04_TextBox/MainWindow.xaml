<Window x:Class="ch15_04_TextBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch15_04_TextBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="450">
    <DockPanel>
        <TextBox x:Name="txtInput" DockPanel.Dock="Top" SelectionChanged="txtInput_SelectionChanged"/>
        <TextBox x:Name="txtDispInfo" AcceptsReturn="True" TextWrapping="Wrap" IsReadOnly="True"/>
    </DockPanel>
</Window>
