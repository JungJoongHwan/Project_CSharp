<Window x:Class="ch20_05_keyboard2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ch20_05_keyboard2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="400">
    <Grid Margin="20">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock VerticalAlignment="Center" Text="검색"/>
            <TextBox x:Name="txtFind" Width="200" Margin="5" KeyDown="txtFind_KeyDown"/>
            <Button x:Name="btnFind" Content="검색(_F,Ctrl+F)" Width="80" Margin="5" Click="btnFind_Click"/>
        </StackPanel>
    </Grid>
</Window>
